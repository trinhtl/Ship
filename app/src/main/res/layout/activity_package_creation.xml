<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageCreation">

    <TextView
        android:id="@+id/create_title"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40pt"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Tạo đơn hàng"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/create_recieve_address"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"
        android:hint="Nhập nơi nhận hàng" />

    <TextView
        android:id="@+id/create_send_address"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        android:hint="Nhập nơi giao hàng" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/create_ship_cost"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:hint="Nhập phí ship" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/create_advance_money"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="330dp"
        android:hint="Nhập tiền ứng" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/create_description"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="380dp"
        android:hint="Mô tả" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="50dp" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:background="#FFFFFF"
            android:text="Trở về"
            android:textColor="#ffb916" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#ffb916"
            android:background="#FFFFFF"
            android:layout_marginLeft="45dp"
            android:text="Tạo" />

    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="ID User: 0" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</android.support.design.widget.CoordinatorLayout>