<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@id/avatar"
        android:text="TextView" />

    <TextView
        android:id="@+id/advanceMoney"
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:layout_below="@id/nickname"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="11dp"
        android:layout_toRightOf="@id/avatar"
        android:text="TextView" />

    <TextView
        android:id="@+id/shipCost"
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:layout_below="@id/advanceMoney"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="11dp"
        android:layout_toRightOf="@id/avatar"
        android:text="TextView" />

    <TextView
        android:id="@+id/sendAddress"
        android:layout_width="395dp"
        android:layout_height="20dp"
        android:layout_below="@id/advanceMoney"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/idPackage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-67dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="257dp"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/createTime"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-67dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="11dp"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/recieveAddress"
        android:layout_width="395dp"
        android:layout_height="20dp"
        android:layout_below="@id/avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/description"
        android:layout_width="395dp"
        android:layout_height="20dp"
        android:layout_below="@id/avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="12dp"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonRecieve"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@id/idPackage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="Nháº­n"
        android:textSize="10sp" />
</android.widget.RelativeLayout>
